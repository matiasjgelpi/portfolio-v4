---
const { name } = Astro.props;
---

<div class="badge">
  {name}
</div>

<style>
  .badge {
    background-color: #f5f5f5;
    border: 3px solid var(--main-blue);
    border-radius: 50px;
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.2);
    color: var(--main-blue);
    font-size: 18px;
    font-weight: 700;
    padding: 5px 10px ;
    text-transform: uppercase;
    width: fit-content;
  }
</style>
