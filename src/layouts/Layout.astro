---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="flex flex-col h-100 w-full
  items-center bg-texture bg-cover">
    <slot />
    <style is:global>
      @import url("https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap");
      :root {
        --main-blue: #2e5b94;
        --light-blue: rgb(38, 142, 205);
        --light-blue-opacity-5: rgba(38, 142, 205, 0.5);
        --lighter-blue: rgba(38, 142, 205, 0.2);
        --main-black: #1d1d1b;
        --main-background: #f5f5f5;
      }

      body {
        font-family: "Rubik", sans-serif;
      }

      .blue-gradient {
        /*start ------------*/
        background: -webkit-gradient(
          linear,
          left top,
          right bottom,
          color-stop(0.44, #268dcd),
          color-stop(0.63, #2e5a94),
          color-stop(0.63, #2e5a94)
        );
        background: -moz-linear-gradient(
          -45deg,
          #268dcd 44%,
          #2e5a94 63%,
          #2e5a94 63%
        );
        background: -webkit-linear-gradient(
          -45deg,
          #268dcd 44%,
          #2e5a94 63%,
          #2e5a94 63%
        );
        background: -o-linear-gradient(
          -45deg,
          #268dcd 44%,
          #2e5a94 63%,
          #2e5a94 63%
        );
        background: -ms-linear-gradient(
          -45deg,
          #268dcd 44%,
          #2e5a94 63%,
          #2e5a94 63%
        );
        background: linear-gradient(
          -45deg,
          #268dcd 44%,
          #2e5a94 63%,
          #2e5a94 63%
        );
        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#268dcd', endColorstr='#2e5a94', gradientType=1);
      }
    </style>
  </body>
</html>
